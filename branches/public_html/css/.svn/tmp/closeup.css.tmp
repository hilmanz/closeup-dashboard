	}
	#listCountry a img{
		width:100%;
	}
	#listCountry a:hover,#listCountry a.current{
		-moz-box-shadow:0px 0px 10px 5px #fff,0px 0px 20px 0 #fff,0px 0px 20px 0 #fff;
		-webkit-box-shadow:0px 0px 10px 5px #fff,0px 0px 20px 0 #fff,0px 0px 20px 0 #fff;
		box-shadow:0px 0px 10px 5px #fff,0px 0px 20px 0 #fff,0px 0px 20px 0 #fff;
	}
	/* ============ POP UP =================*/
	.popupContainer,.popupContainer2{
		display:none;
		background:#fff;
		width:80%;
		height:700px;
		position:absolute;
		left:50%;
		margin:150px 0 0 -40%;
		z-index:101;
		top:0;
		-moz-box-shadow:5px 10px 20px #000;
		-webkit-box-shadow:5px 10px 20px #000;
		box-shadow:5px 10px 20px #000;
	}
	.popupContainer2{
		position:relative;
		height:500px;
		width:600px;
		left:auto;
	}
	.popupContainer2 iframe{
		position:relative;
		height:500px;
		width:600px;
	}
	.popupContainer2 #popupContent{
		width:600px;
	}
	#bgPopup{
		display:none;
		background:url(../images/trans.png) repeat;
		position:fixed;
		width:100%; height:100%;
		z-index:100;
		left:0;
		top:0;
	}
	.closePopup{
		background:url(../images/close.png) no-repeat;
		display:block;
		width:85px; height:42px;
		position:absolute;
		right:0;
		top:-40px;
		text-decoration:none;
	}
	iframe{
		margin:0;
		padding:0;
		position:absolute;
		top:0;
		left:0;
		width:100%;
		height:700px;
	}
	.entry ol{
		font-size:15px;
	}
	#newsTicker{
		position:fixed;
		width:100%;
		height:60px;
		background:url(../img/trans.png) repeat;
		bottom:0;
		z-index:4000;
		left:0;
		padding:20px 0;
	}
	.newsTicker{
		list-style:none;
		color:#fff;
		margin:0;
		padding:0;
		width:350px;
		float:left;
	}
	.newsTicker a{
		color:#FF0;
	}
	.newsTicker li{
		width:350px;
		float:left;
	}
	.entryNews{
		width:200px;
		float:left;
		padding:0 0 0 10px;
	}
	.entryNews h3{
		font-size:12px;
		margin:0;
		font-family:Arial, Helvetica, sans-serif;
	}
	.entryNews p{
		margin:0;
	}
	.thumbnail{
		width:120px;
		overflow:hidden;
		float:left;
	}
	.thumbnail img{
		height:60px;
	}
	#newsTicker .wrapper{
		width:1050px;
		margin:0 auto;
	}
}
